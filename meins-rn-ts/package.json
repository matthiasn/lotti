{
  "name": "typescript-react-native-starter",
  "version": "0.0.5",
  "private": false,
  "description": "A Typescript React Native boilerplate to start your project quickly",
  "author": "Hung Arthur Dao <arthur_dao@icloud.com>",
  "license": "MIT",
  "scripts": {
    "tsc": "./node_modules/typescript/bin/tsc",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:ios": "open ./ios/*.xcworkspace && yarn start",
    "open:ios": "open ./ios/*.xcworkspace",
    "open:android": "open -a '/Applications/Android Studio.app' android",
    "start:android": "open -a '/Applications/Android Studio.app' ./android && yarn start",
    "lint": "yarn tsc && eslint . --ext .js,.ts,.tsx --cache",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "rename": "react-native-rename",
    "jetify": "npx jetify",
    "icon": "npx app-icon generate -i publishing/icon.png",
    "splash": "npx generate-bootsplash"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.12.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.10",
    "@react-navigation/native": "^5.9.4",
    "@xstate/immer": "^0.2.0",
    "@xstate/react": "^1.3.2",
    "i18next": "^20.2.1",
    "immer": "^9.0.1",
    "react": "16.14.0",
    "react-i18next": "^11.8.13",
    "react-native": "0.63.4",
    "react-native-audio-recorder-player": "^2.6.2",
    "react-native-bootsplash": "^2.2.7",
    "react-native-easy-icon": "^1.0.7",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-normalize": "^1.0.1",
    "react-native-reanimated": "^1.13.1",
    "react-native-safe-area-context": "^3.2.0",
    "react-native-screens": "^2.11.0",
    "react-native-vector-icons": "^8.1.0",
    "react-redux": "^7.2.1",
    "realm": "^10.4.0",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "typesafe-actions": "^5.1.0",
    "xstate": "^4.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/runtime": "^7.13.10",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^26.0.22",
    "@types/react": "^16.9.56",
    "@types/react-native": "^0.63.52",
    "@types/react-native-vector-icons": "^6.4.6",
    "@types/react-redux": "^7.1.16",
    "@types/react-test-renderer": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "app-icon": "^0.13.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.10.0",
    "eslint-plugin-react-native-a11y": "^2.0.4",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^4.3.8",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "jetifier": "^1.6.6",
    "metro-react-native-babel-preset": "^0.63.0",
    "nock": "^13.0.11",
    "prettier": "^2.2.1",
    "react-dom": "^16.14.0",
    "react-native-rename": "^2.8.0",
    "react-test-renderer": "16.14.0",
    "redux-saga-test-plan": "^4.0.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn jest --coverage --changedSince=origin/master"
    }
  }
}
