# Voxtral Local Service Configuration

# Server settings
HOST=127.0.0.1
PORT=11344
LOG_LEVEL=INFO

# Model settings
# Default model is Voxtral Mini 3B (9.5GB VRAM)
VOXTRAL_MODEL_ID=mistralai/Voxtral-Mini-3B-2507

# Device selection (auto, cuda, mps, cpu)
# auto = automatically select best available device
VOXTRAL_DEVICE=auto

# Optional: HuggingFace token for faster downloads
# Not required for Voxtral (Apache 2.0 license, not gated)
# HF_TOKEN=your_token_here

# Memory management
LOW_MEMORY_MODE=true
MAX_MEMORY_GB=12

# Audio settings
MAX_AUDIO_SIZE_MB=100
AUDIO_CHUNK_SIZE_SECONDS=60
AUDIO_OVERLAP_SECONDS=1.0

# Performance tuning
ENABLE_TORCH_COMPILE=false
LOG_TO_STDOUT=false
